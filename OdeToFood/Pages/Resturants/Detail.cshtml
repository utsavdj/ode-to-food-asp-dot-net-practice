@*@page "{id?:int}"*@
@page "{resturantId:int}"

@model OdeToFood.Pages.Resturants.DetailModel
@{
    ViewData["Title"] = Model.Resturant.Name;
}

@if (Model.Message != null)
{
    <div class="alert alert-success">@Model.Message</div>
}
<h2>@Model.Resturant.Name</h2>
<div>
    Id: @Model.Resturant.Id
</div>

<div>
    Location: @Model.Resturant.Location
</div>

<div>
    Cuisine: @Model.Resturant.Cuisine
</div>

<a asp-page="./List" class="btn btn-outline-secondary">All Resturants</a>
