@page
@model ListModel
@{
    ViewData["Title"] = "Resturants";
}

<h1>Resturants</h1>

<div class="clearfix">
    <form method="get" class="float-left">
        <div class="form-group">
            <div class="input-group">
                @*<input type="search" class="form-control" name="searchTerm" value="" />*@
                <input type="search" class="form-control" asp-for="SearchTerm" />
                <span class="input-group-append">
                    <button class="btn btn-outline-secondary">
                        <i class="fas fa-search"></i> Search
                    </button>
                </span>
            </div>
        </div>
    </form>
    <a asp-page="./Edit" class="btn btn-primary float-right"><i class="fas fa-plus-circle"></i> Add New Resturant</a>
</div>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Cuisine</th>
        <th>Actions</th>
    </tr>
    @foreach (var resturant in Model.Resturants)
    {
        <tr>
            <td>@resturant.Name</td>
            <td>@resturant.Location</td>
            <td>@resturant.Cuisine</td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-resturantId="@resturant.Id" title="View Detail">
                    <i class="fas fa-eye"></i>
                </a>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-resturantId="@resturant.Id" title="Edit Resturant">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
        </tr>
    }
</table>

<div>@Model.Message</div>